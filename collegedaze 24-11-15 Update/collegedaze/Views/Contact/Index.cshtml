@model collegedaze.Models.Property
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="clearfix"></div>
<div class="page_title two">
    <div class="container">

        <h1>Contact Us</h1>

    </div>
</div><!-- end page title -->
<div class="clearfix"></div>
<div class="content_fullwidth">
    <div class="container">

        <div class="container">
            <div class="content_fullwidth lessmar">

                <div class="one_half">

                    <div class="cforms">
@using (Html.BeginForm("Index", "Contact", FormMethod.Post, new {@id="sky-form",@class = "sky-form"}))

{ 
                            <header>Contact <strong>Form</strong></header>
                        
                                <p class="red">@TempData["MSG"]</p>
                           
                            <fieldset>
                                <div class="row">
                                    <section class="col col-6">
                                        <label class="label">Name</label>
                                        <label class="input">
                                            <i class="icon-append icon-user"></i>
                                            @Html.TextBoxFor(model => model.FullName, new {@id="name",@placeholder = "", @autocomplete = "off",@Maxlength = "100",@required="required" })
                                            
                                        </label>
                                    </section>
                                    <section class="col col-6">
                                        <label class="label">E-mail</label>
                                        <label class="input">
                                            <i class="icon-append icon-envelope-alt"></i>
                                            @Html.TextBoxFor(model => model.EmailID, new { @id = "email", @placeholder = "", @autocomplete = "off", @type = "email", @required = "required" })
                                            
                                        </label>
                                    </section>
                                </div>
                                <section>
                                    <label class="label">Contact Number</label>
                                    <label class="input">
                                        <i class="icon-append icon-tag"></i>
                                        @Html.TextBoxFor(model => model.ContactNo, new { @id = "subject", @placeholder = "", @autocomplete = "off", @type = "number", @required = "required" })
                                        
                                    </label>
                                </section>
                                <section>
                                    <label class="label">Message</label>
                                    <label class="textarea">
                                        <i class="icon-append icon-comment"></i>
                                        @Html.TextAreaFor(model => model.Message, new { @id = "message", @placeholder = "", @autocomplete = "off", @rows = "4", @required = "required" })
                                        
                                    </label>
                                </section>
                         
                            </fieldset>
                            <footer>
                                <button type="submit" class="button">Send message</button>
                            </footer>
                           
}

                    </div>

                </div>

                <div class="one_half last">

                    <div class="address_info">

                        <h4>College <strong>Daze</strong></h4>
                        <ul>
                            <li>
                                                   
                                Telephone: +44 (0)7950 807085<br />
                                
                                E-mail: <a href="#">coverman1965@gmail.com</a><br />
                              
                            </li>
                        </ul>
                    </div>
                         </div>

            </div>

        </div>


    </div>
</div>   <!-- end content area -->
<div class="clearfix margin_top5"></div>

