@model collegedaze.Models.Property
@using collegedaze.HtmlHelpers;

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["MSG"] != null)
{
    <div class="alert alert-info alert-dismissable">
        <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
        <strong>@TempData["MSG"]</strong>
    </div>
}

<div class="page-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-blue">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="portlet box panel panel-grey">
                            <div class="panel-heading">
                                Content Listing
                            </div>
                            <div class="portlet-body">
                                <div class="row mbm">
                                    <div class="col-lg-12">
                                        <div class="table-responsive">
                                            <table id="table_id" class="table table-hover table-striped table-bordered tablesorter">
                                                <thead>

                                                    <tr>
                                                        <th>Id</th>
                                                        <th>Title</th>
                                                        <th>Menu</th>
                                                        <th>Status</th>
                                                        <th>Delete</th>

                                                    </tr>

                                                </thead>
                                                <tbody>
                                                    @foreach (collegedaze.Models.Property i in ViewBag.DetailList)
                                                    {
                                                        <tr>

                                                            <td>
                                                                <a href="/Content/Edit?ID=@i.id" class="btn btn-warning btn-xs">
                                                                    <i class="fa fa-edit"></i>&nbsp;
                                                                    Edit
                                                                </a>
                                                            </td>

                                                            <td>@i.Title</td>
                                                            <td>@i.Menu</td>
                                                            <td>@i.Status</td>
                                                            <td><a href="/Content/Delete?id=@i.id&type=Content" class="btn btn-primary btn-xs">Delete</a></td>

                                                        </tr>
                                                    }

                                                </tbody>

                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@section scripts{
    <script src="/admin_assets/vendors/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="/admin_assets/vendors/DataTables/media/js/dataTables.bootstrap.js"></script>
    <script src="/admin_assets/vendors/DataTables/extensions/TableTools/js/dataTables.tableTools.min.js"></script>
    <script src="/admin_assets/js/table-datatables.js"></script>


}